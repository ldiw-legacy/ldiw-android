<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.letsdoitworld.wastemapper"
      android:versionName="1.0.1" android:versionCode="4">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false">
        <activity android:label="@string/app_name" android:name=".Map"
        android:theme="@style/Theme.NoBackgroundAndTitle"
        android:screenOrientation="portrait"
        android:launchMode="singleTop"></activity>
    <service android:name=".MainService"></service>
	<uses-library android:name="com.google.android.maps" ></uses-library>
	<activity android:name=".PointsListActivity"
		android:theme="@style/Theme.NoBackgroundAndTitle"
		android:screenOrientation="portrait"
		android:launchMode="singleTop"></activity>
	<activity android:name=".ShowPointActivity"
		android:theme="@style/Theme.NoBackgroundAndTitle"
		android:screenOrientation="portrait"
		android:launchMode="singleInstance"></activity>
	<activity android:name=".ShowPoint2Activity"
		android:theme="@style/Theme.NoBackgroundAndTitle"
		android:screenOrientation="portrait"
		android:launchMode="singleTop">

	  </activity>	
	<activity android:name=".NewPointActivity"
		android:theme="@style/Theme.NoBackgroundAndTitle"
		android:launchMode="singleTop"
        android:screenOrientation="portrait"
		></activity>
	<activity android:name=".ChooseLocationActivity"
		android:theme="@style/Theme.NoBackgroundAndTitle"
		android:screenOrientation="portrait"
		android:launchMode="singleTop"></activity>		
	<activity android:name=".MenuActivity"
		android:theme="@style/Theme.NoBackgroundAndTitle"
		android:screenOrientation="portrait"
		android:launchMode="singleTop">
		<intent-filter>
	    	<action android:name="android.intent.action.MAIN" />
	        <category android:name="android.intent.category.LAUNCHER" />
	    </intent-filter>	
	</activity>
<activity android:name=".OptionsActivity"
	android:theme="@style/Theme.NoBackgroundAndTitle"
		android:screenOrientation="portrait"
		android:launchMode="singleTop"></activity>
</application>
	<uses-sdk android:minSdkVersion="4" 
          android:targetSdkVersion="4"/>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
</manifest> 
